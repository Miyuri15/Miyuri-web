# Copy to .env.local (Next.js) and fill values
# SMTP settings for Nodemailer
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# Email address that will receive contact messages
RECEIVER_EMAIL=your.email@example.com

# Optional: if your SMTP uses TLS on 465 set SECURE=true
SECURE=false
